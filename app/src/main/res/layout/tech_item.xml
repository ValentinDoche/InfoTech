<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="5dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/tech_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginTop="5dp"
        >

        <LinearLayout
            android:id="@+id/tech_item"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:background="@drawable/border"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/tech_img"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/java" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:orientation="vertical"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tech_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="JAVA"
                        android:textSize="24dp"
                        android:textStyle="bold"
                        />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />
                    <com.google.android.material.chip.Chip
                        android:id="@+id/tech_offers"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white_color"
                        app:chipBackgroundColor="@color/tertiary_color"
                        android:text="12345"
                        app:chipMinHeight="20dp"
                        android:textSize="14dp"
                        app:chipStartPadding="2dp"
                        app:chipEndPadding="2dp"
                        android:layout_marginRight="5dp"
                        android:checkable = 'false'
                        />
                </LinearLayout>
                <HorizontalScrollView
                    android:layout_marginTop="-20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:layout_marginRight="1dp"
                    >
                    <com.google.android.material.chip.ChipGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:singleLine="true">
                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Heyyyyy"
                            app:chipMinHeight="16dp"
                            android:textSize="10dp"
                            app:chipStartPadding="2dp"
                            app:chipEndPadding="2dp"
                            />
                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Heyyyyy"
                            app:chipMinHeight="16dp"
                            android:textSize="10dp"
                            app:chipStartPadding="2dp"
                            app:chipEndPadding="2dp"
                            />
                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Heyyyyy"
                            app:chipMinHeight="16dp"
                            android:textSize="10dp"
                            app:chipStartPadding="2dp"
                            app:chipEndPadding="2dp"
                            />
                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Heyyyyy"
                            app:chipMinHeight="16dp"
                            android:textSize="10dp"
                            app:chipStartPadding="2dp"
                            app:chipEndPadding="2dp"
                            />
                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Heyyyyy"
                            app:chipMinHeight="16dp"
                            android:textSize="10dp"
                            app:chipStartPadding="2dp"
                            app:chipEndPadding="2dp"
                            />
                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Heyyyyy"
                            app:chipMinHeight="16dp"
                            android:textSize="10dp"
                            app:chipStartPadding="2dp"
                            app:chipEndPadding="2dp"
                            />
                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Heyyyyy"
                            app:chipMinHeight="16dp"
                            android:textSize="10dp"
                            app:chipStartPadding="2dp"
                            app:chipEndPadding="2dp"
                            />
                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Heyyyyy"
                            app:chipMinHeight="16dp"
                            android:textSize="10dp"
                            app:chipStartPadding="2dp"
                            app:chipEndPadding="2dp"
                            />
                    </com.google.android.material.chip.ChipGroup>
                </HorizontalScrollView>
                <TextView
                    android:id="@+id/tech_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="60"
                    android:text="Blablablabla"
                    android:layout_marginLeft="10px"
                    android:layout_marginTop="-10dp"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>